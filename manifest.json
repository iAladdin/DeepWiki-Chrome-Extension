{
  "manifest_version": 3,
  "name": "DeepWiki Redirect",
  "version": "1.0",
  "description": "Add a button on GitHub repository pages to redirect to DeepWiki",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://github.com/*/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
